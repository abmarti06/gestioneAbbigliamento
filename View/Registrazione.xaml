<Window x:Class="Abbigliamento.Registrazione"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Abbigliamento"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Register" FontSize="20" FontWeight="Bold"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Username:" HorizontalAlignment="Right" Margin="0,10"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="10" x:Name="UsernameBox"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Password:" HorizontalAlignment="Right" Margin="0,10"/>
            <PasswordBox Grid.Row="2" Grid.Column="1" Margin="10" x:Name="passwordBox"/>
            <Label Grid.Row="3" Grid.Column="0" Content="ConfirmPassword:" HorizontalAlignment="Right" Margin="0,10"/>
            <PasswordBox Grid.Row="3" Grid.Column="1" Margin="10" x:Name="ConfirmPasswordBox"/>
            <Label Grid.Row="4" Grid.Column="0" Content="FirstName:" HorizontalAlignment="Right" Margin="0,10"/>
            <TextBox Grid.Row="4" Grid.Column="1" Margin="10" x:Name="FirstNameBox"/>
            <Label Grid.Row="5" Grid.Column="0" Content="LastName:" HorizontalAlignment="Right" Margin="0,10"/>
            <TextBox Grid.Row="5" Grid.Column="1" Margin="10" x:Name="LastNameBox"/>
            <Label Grid.Row="6" Grid.Column="0" Content="Email:" HorizontalAlignment="Right" Margin="0,10"/>
            <TextBox Grid.Row="6" Grid.Column="1" Margin="10" x:Name="EmailBox"/>
            <Button Grid.Row="8" Grid.Column="0" Content="Login" HorizontalAlignment="Right" Margin="10" Width="80" Height="40" Click="Button_Click_1" />
            <Button Grid.Row="8" Grid.Column="1" Content="Register" HorizontalAlignment="Right" Margin="10" Width="80" Height="40" Click="Button_Click" />
        </Grid>
    </Border>
</Window>
